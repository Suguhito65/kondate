<main class="recipe-show">
  <div class="recipe-box">
    <div class='recipe-img-content'>
      <% @recipes.each do |recipe| %>
        <p class="cuisine">
          <%= recipe.cuisine %>
        </p>
        <%= link_to image_tag(recipe.image, class: :search__img), recipe_path(recipe.id) %>
      <% end %>
    </div>
  </div>
</main>