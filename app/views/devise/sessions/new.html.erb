<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h1 class="page-heading">ログイン</h1>

      <%= form_with model: @user, url:  user_session_path, local: true do |f| %>

        <div class="error-alert">
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上の半角英数字）" %><br />
          <%= f.password_field :password, placeholder: "6文字以上の半角英数字", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>

      <% end %>

    </div>
  </div>
</div>