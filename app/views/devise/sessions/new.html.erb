<main class="recipe-show">
  <div class="recipe-box">
    <div class="form_wrapper">
      <h1 class="page-heading">ログイン</h1>
      <div class="form_wrap">
        <%= form_with model: @user, url:  user_session_path, local: true do |f| %>

          <div class="error-alert">
            <div class='login-flash-message'>
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>
          </div>

          <%= f.label :email, "メールアドレス", class:"input-title" %>
          <div class="field">
            <%= f.email_field :email, placeholder:"例）kondate@gmail.com", autofocus: true, autocomplete: "email", class:"input-default" %>
          </div>

          <%= f.label :password, "パスワード", class:"input-title" %>
          <div class="field">
            <%= f.password_field :password, placeholder: "※6文字以上の半角英数字", autocomplete: "current-password", class:"input-default" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: :form__btn  %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</main>