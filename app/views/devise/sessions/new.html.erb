<div class="main">
  <div class="inner">
    <div class="form_wrapper">
      <h1 class="page-heading">ログイン</h1>
      <div class="form_wrap">
        <%= form_with model: @user, url:  user_session_path, local: true do |f| %>

          <div class="error-alert">
            <div class='login-flash-message'>
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email", class:"input-default" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, placeholder: "6文字以上の半角英数字", autocomplete: "current-password", class:"input-default" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: :form__btn  %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>