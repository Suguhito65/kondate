<main class="recipe-show">
  <div class="recipe-box">
    <div class="form_wrapper">
      <h1 class="page-heading">ユーザー新規登録</h1>
      <div class="form_wrap">

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

          <%= render 'devise/shared/error_messages', model: f.object %>

          <h2 class="input-title">ユーザー名<span class="mandatory">（必須）</span></h2>
          <div class="field">
            <%= f.text_area :name, class:"input-default" %>
          </div>

          <h2 class="input-title">メールアドレス<span class="mandatory">（必須）</span></h2>
          <div class="field">
            <%= f.email_field :email, placeholder:"例）kondate@gmail.com", autofocus: true, autocomplete: "email", class:"input-default" %>
          </div>

          <h2 class="input-title">パスワード<span class="mandatory">（必須）</span></h2>
          <div class="field">
            <%= f.password_field :password, placeholder:"※6文字以上の半角英数字", autocomplete: "new-password", class:"input-default" %>
          </div>

          <h2 class="input-title">パスワード再入力<span class="mandatory">（必須）</span></h2>
          <div class="field">
            <%= f.password_field :password_confirmation, placeholder:"再入力してください", autocomplete: "new-password", class:"input-default" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn  %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>